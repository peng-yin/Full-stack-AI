# Database
DATABASE_URL="mysql://user:password@localhost:3306/backend_ai"

# Redis
REDIS_URL="redis://localhost:6379"

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="your_password"

# App
NODE_ENV="development"
APP_URL="http://localhost:3008"
NEXT_PUBLIC_BASE_URL="http://localhost:3008"

# GitHub OAuth
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# OpenRouter (AI Agent)
OPENROUTER_API_KEY="your_openrouter_api_key"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
LLM_MODEL="gpt-4o-mini"
EMBEDDING_MODEL="text-embedding-3-small"

# RAG Configuration
RAG_ENABLED=true
RAG_TOP_K=4
RAG_SCORE_THRESHOLD=0.1
RAG_CACHE_TTL_MS=60000

# Memory Configuration
MEMORY_MAX_MESSAGES=30
MEMORY_SUMMARY_EVERY=12
MEMORY_SUMMARY_MAX_TOKENS=3000
MEMORY_KEEP_RECENT_COUNT=5

# MCP Configuration
MCP_CONFIRM_REQUIRED=true

# SSE Configuration
SSE_HEARTBEAT_MS=15000
