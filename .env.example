# Database
DATABASE_URL="mysql://user:password@localhost:3306/backend_ai"

# Redis
REDIS_URL="redis://localhost:6379"

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="your_password"

# App
NODE_ENV="development"
NEXT_PUBLIC_BASE_URL="http://localhost:3008"

# GitHub OAuth (在 .env.local 中配置实际值)
GITHUB_CLIENT_ID="your_github_client_id"
GITHUB_CLIENT_SECRET="your_github_client_secret"

# OpenRouter (AI Agent) - 在 .env.local 中配置实际 API Key
OPENROUTER_API_KEY="your_openrouter_api_key"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
LLM_MODEL="gpt-4o-mini"
EMBEDDING_MODEL="text-embedding-3-small"
REQUEST_TIMEOUT_MS=30000

# Agent - RAG (检索增强生成)
RAG_ENABLED=true
RAG_TOP_K=4
RAG_SCORE_THRESHOLD=0.1
RAG_CACHE_TTL_MS=60000

# Agent - Memory (记忆管理)
MEMORY_MAX_MESSAGES=30
MEMORY_SUMMARY_EVERY=12
MEMORY_SUMMARY_MAX_TOKENS=3000
MEMORY_KEEP_RECENT_COUNT=5

# Agent - MCP Tools (工具确认策略)
# true: 只对危险操作(如delete_file)要求确认，安全操作(ping, search_docs)自动执行
# false: 所有工具都自动执行，不需要确认（推荐用于开发和可信环境）
MCP_CONFIRM_REQUIRED=false

# Agent - Other
SSE_HEARTBEAT_MS=15000
AGENT_REDIS_KEY_PREFIX="ai-agent"
